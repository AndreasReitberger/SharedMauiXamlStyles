<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AndreasReitberger.Shared.ContentViews.BiometricAuthConventView"
    >
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Grid
                IsVisible="{Binding Source={RelativeSource TemplatedParent}, Path=IsVisible}"
                Background="{Binding Source={RelativeSource TemplatedParent}, Path=Background}"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                RowDefinitions="*,Auto,*"
                >
                <VerticalStackLayout
                    Grid.Row="1"
                    >
                    <Label
                        Margin="12,4"
                        Style="{StaticResource Style.Core.Label.Default}"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Center"
                        FormattedText="{Binding Source={RelativeSource TemplatedParent}, Path=TitleLabelFormattedString}"
                        Text="{Binding Source={RelativeSource TemplatedParent}, Path=TitleLabelText}"
                        >
                    </Label>
                    <Button
                        Margin="12,16"
                        Text="{Binding Source={RelativeSource TemplatedParent}, Path=AuthButtonText}"
                        Style="{StaticResource Style.Core.Button.Default}"
                        Command="{Binding Source={RelativeSource TemplatedParent}, Path=AuthButtonCommand}"
                        />
                </VerticalStackLayout>
            </Grid>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
