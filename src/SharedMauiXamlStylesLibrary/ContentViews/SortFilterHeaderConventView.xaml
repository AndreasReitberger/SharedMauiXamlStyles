<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AndreasReitberger.Shared.ContentViews.SortFilterHeaderConventView"
    >
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Grid
                x:Name="root"
                Background="{Binding Source={RelativeSource TemplatedParent}, Path=Background}"
                HeightRequest="{Binding Source={RelativeSource TemplatedParent}, Path=HeightRequest}"
                HorizontalOptions="FillAndExpand"
                ColumnDefinitions="*,Auto,Auto,Auto"
                >
                <Button
                    Grid.Column="1"
                    MinimumWidthRequest="{OnIdiom Phone=92, Default=144}"
                    Margin="0"
                    CornerRadius="0"
                    Text="{Binding Source={RelativeSource TemplatedParent}, Path=SortButtonText}"
                    Command="{Binding Source={RelativeSource TemplatedParent}, Path=SortButtonCommand}"
                    CommandParameter="{Binding Source={RelativeSource TemplatedParent}, Path=CommandParameter}"
                    BorderWidth="0"
                    Style="{StaticResource Style.Core.Button.Default}"
                    MinimumHeightRequest="{Binding Source={Reference root}, Path=HeightRequest}"
                    HeightRequest="{Binding Source={Reference root}, Path=HeightRequest}"
                    >
                    <Button.ImageSource>
                        <FontImageSource
                            FontFamily="{Binding Source={RelativeSource TemplatedParent}, Path=ButtonIconFontFamily}"
                            Glyph="{Binding Source={RelativeSource TemplatedParent}, Path=SortButtonIconText}"
                            Color="{Binding Source={RelativeSource AncestorType={x:Type Button}, AncestorLevel=1}, Path=TextColor}"
                            Size="Small"
                            />
                    </Button.ImageSource>
                </Button>
                <Button
                    Grid.Column="2"
                    IsVisible="{Binding Source={RelativeSource TemplatedParent}, Path=ShowFilterButton}"
                    MinimumWidthRequest="{OnIdiom Phone=92, Default=144}"
                    Margin="0"
                    CornerRadius="0"
                    Text="{Binding Source={RelativeSource TemplatedParent}, Path=FilterButtonText}"
                    Command="{Binding Source={RelativeSource TemplatedParent}, Path=FilterButtonCommand}"
                    CommandParameter="{Binding Source={RelativeSource TemplatedParent}, Path=CommandParameter}"
                    BorderWidth="0"
                    Style="{StaticResource Style.Core.Button.Default}"
                    MinimumHeightRequest="{Binding Source={Reference root}, Path=HeightRequest}"
                    HeightRequest="{Binding Source={Reference root}, Path=HeightRequest}"
                    >
                    <Button.ImageSource>
                        <FontImageSource
                            FontFamily="{Binding Source={RelativeSource TemplatedParent}, Path=ButtonIconFontFamily}"
                            Glyph="{Binding Source={RelativeSource TemplatedParent}, Path=FilterButtonIconText}"
                            Color="{Binding Source={RelativeSource AncestorType={x:Type Button}, AncestorLevel=1}, Path=TextColor}"
                            Size="Small"
                            />
                    </Button.ImageSource>
                </Button>
                <Button
                    Grid.Column="3"
                    Margin="0"
                    Text="{Binding Source={RelativeSource TemplatedParent}, Path=ClearButtonIconText}"
                    FontFamily="{Binding Source={RelativeSource TemplatedParent}, Path=ButtonIconFontFamily}"
                    Command="{Binding Source={RelativeSource TemplatedParent}, Path=ClearButtonCommand}"
                    FontSize="{OnPlatform Android=Small, Default=Default}"
                    MinimumHeightRequest="{Binding Source={Reference root}, Path=HeightRequest}"
                    HeightRequest="{Binding Source={Reference root}, Path=HeightRequest}"
                    WidthRequest="{OnPlatform Android=40, Default=48}"
                    CornerRadius="0"
                    BorderWidth="0"
                    >
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource Style.Core.Button.Icon}">
                            <Setter Property="Background" Value="{StaticResource Red}" />
                            <Setter Property="VisualStateManager.VisualStateGroups">
                                <VisualStateGroupList>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Property="TextColor" Value="{StaticResource White}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="PointerOver">
                                            <VisualState.Setters>
                                                <Setter Property="Background" Value="{StaticResource Red}" />
                                                <Setter Property="TextColor" Value="{StaticResource White}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Disabled">
                                            <VisualState.Setters>
                                                <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray800}}" />
                                                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray600}}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateGroupList>
                            </Setter>
                            <Setter Property="IsVisible" Value="False"/>
                            <Style.Triggers>
                                <DataTrigger
                                        TargetType="Button" 
                                        Binding="{Binding Source={RelativeSource TemplatedParent}, Path=IsFiltered}"
                                        Value="True"
                                        >
                                    <Setter Property="IsVisible" Value="True"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
