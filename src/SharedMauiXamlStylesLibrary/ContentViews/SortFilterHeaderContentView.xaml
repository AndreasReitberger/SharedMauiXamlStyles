<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AndreasReitberger.Shared.ContentViews.SortFilterHeaderContentView"
    xmlns:conventViews="clr-namespace:AndreasReitberger.Shared.ContentViews"
    x:Name="mainView"
    
    x:DataType="conventViews:SortFilterHeaderContentView"
    >
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Grid
                BindingContext="{x:Reference mainView}"
                Background="{TemplateBinding Background}"
                HeightRequest="{TemplateBinding HeightRequest}"
                ColumnDefinitions="*,Auto,Auto,Auto"
                >
                <Button
                    Grid.Column="1"
                    MinimumWidthRequest="{OnIdiom Phone=92, Default=144}"
                    Margin="0"
                    CornerRadius="0"
                    Text="{Binding SortButtonText}"
                    Command="{Binding SortButtonCommand}"
                    CommandParameter="{Binding SortButtonParameter}"
                    BorderWidth="0"
                    Style="{StaticResource Style.Core.Button.Default}"
                    MinimumHeightRequest="{TemplateBinding HeightRequest}"
                    HeightRequest="{TemplateBinding HeightRequest}"
                    >
                    <Button.ImageSource>
                        <FontImageSource
                            FontFamily="{Binding ButtonIconFontFamily}"
                            Glyph="{Binding SortButtonIconText}"
                            Color="{Binding x:DataType='Button', Source={RelativeSource AncestorType={x:Type Button}, AncestorLevel=1}, Path=TextColor}"
                            Size="Small"
                            />
                    </Button.ImageSource>
                </Button>
                <Button
                    Grid.Column="2"
                    IsVisible="{Binding ShowFilterButton}"
                    MinimumWidthRequest="{OnIdiom Phone=92, Default=144}"
                    Margin="0"
                    CornerRadius="0"
                    Text="{Binding FilterButtonText}"
                    Command="{Binding FilterButtonCommand}"
                    CommandParameter="{Binding FilterButtonParameter}"
                    BorderWidth="0"
                    Style="{StaticResource Style.Core.Button.Default}"
                    MinimumHeightRequest="{TemplateBinding HeightRequest}"
                    HeightRequest="{TemplateBinding HeightRequest}"
                    >
                    <Button.ImageSource>
                        <FontImageSource
                            FontFamily="{Binding ButtonIconFontFamily}"
                            Glyph="{Binding FilterButtonIconText}"
                            Color="{Binding x:DataType='Button', Source={RelativeSource AncestorType={x:Type Button}, AncestorLevel=1}, Path=TextColor}"
                            Size="Small"
                            />
                    </Button.ImageSource>
                </Button>
                <Button
                    Grid.Column="3"
                    Margin="0"
                    Text="{Binding ClearButtonIconText}"
                    FontFamily="{Binding ButtonIconFontFamily}"
                    Command="{Binding ClearButtonCommand}"
                    CommandParameter="{Binding ClearButtonParameter}"
                    FontSize="{OnPlatform Android=Small, Default=Default}"
                    MinimumHeightRequest="{TemplateBinding HeightRequest}"
                    HeightRequest="{TemplateBinding HeightRequest}"
                    WidthRequest="{OnPlatform Android=40, Default=48}"
                    CornerRadius="0"
                    BorderWidth="0"
                    >
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource Style.Core.Button.Icon}">
                            <Setter Property="Background" Value="{StaticResource Red}" />
                            <Setter Property="VisualStateManager.VisualStateGroups">
                                <VisualStateGroupList>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Property="TextColor" Value="{StaticResource White}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="PointerOver">
                                            <VisualState.Setters>
                                                <Setter Property="Background" Value="{StaticResource Red}" />
                                                <Setter Property="TextColor" Value="{StaticResource White}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Disabled">
                                            <VisualState.Setters>
                                                <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray800}}" />
                                                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray600}}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateGroupList>
                            </Setter>
                            <Setter Property="IsVisible" Value="False"/>
                            <Style.Triggers>
                                <DataTrigger
                                        TargetType="Button" 
                                        Binding="{Binding IsFiltered}"
                                        Value="True"
                                        >
                                    <Setter Property="IsVisible" Value="True"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
