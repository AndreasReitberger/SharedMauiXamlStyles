<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AndreasReitberger.Shared.ContentViews.SwitchHeaderConventView"
    >
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Grid
                x:Name="root"
                Background="{Binding Source={RelativeSource TemplatedParent}, Path=Background}"
                HeightRequest="{Binding Source={RelativeSource TemplatedParent}, Path=HeightRequest}"
                HorizontalOptions="FillAndExpand"
                ColumnDefinitions="Auto,*,Auto"
                >
                <!--  Back Button  -->
                <Button
                    Margin="0"
                    Padding="0"
                    Command="{Binding Source={RelativeSource TemplatedParent}, Path=BackButtonCommand}"
                    CommandParameter="{Binding .}"
                    CornerRadius="0"
                    Text="{Binding Source={RelativeSource TemplatedParent}, Path=BackButtonIconText}"
                    FontFamily="{Binding Source={RelativeSource TemplatedParent}, Path=ButtonIconFontFamily}"
                    Style="{StaticResource Style.Core.Button.IconPrimary.MaterialDesign}"
                    MinimumHeightRequest="{Binding Source={Reference root}, Path=HeightRequest}"
                    HeightRequest="{Binding Source={Reference root}, Path=HeightRequest}"
                    />
                <Label 
                    Grid.Column="1"
                    FormattedText="{Binding Source={RelativeSource TemplatedParent}, Path=TitleLabelFormattedString}"
                    Text="{Binding Source={RelativeSource TemplatedParent}, Path=TitleLabelText}"
                    Style="{StaticResource Style.Core.Label.Default}"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"
                    />
                <!--  Next Button  -->
                <Button
                    Grid.Column="2"
                    Margin="0"
                    Padding="0"
                    Command="{Binding Source={RelativeSource TemplatedParent}, Path=NextButtonCommand}"
                    CommandParameter="{Binding .}"
                    CornerRadius="0"
                    Text="{Binding Source={RelativeSource TemplatedParent}, Path=NextButtonIconText}"
                    FontFamily="{Binding Source={RelativeSource TemplatedParent}, Path=ButtonIconFontFamily}"
                    Style="{StaticResource Style.Core.Button.IconPrimary.MaterialDesign}"
                    MinimumHeightRequest="{Binding Source={Reference root}, Path=HeightRequest}"
                    HeightRequest="{Binding Source={Reference root}, Path=HeightRequest}"
                    />
            </Grid>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
