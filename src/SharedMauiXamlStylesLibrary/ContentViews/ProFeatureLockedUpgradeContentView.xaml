<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AndreasReitberger.Shared.ContentViews.ProFeatureLockedUpgradeContentView"
    >
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Border   
                BindingContext="{Binding Source={RelativeSource TemplatedParent}}"
                Padding="4"
                >
                <Grid
                    CompressedLayout.IsHeadless="True"
                    >
                    <Grid
                        Background="{Binding Source={RelativeSource TemplatedParent}, Path=Background}"
                        Opacity="{Binding Source={RelativeSource TemplatedParent}, Path=Opacity}"
                        />
                    <Grid
                        CompressedLayout.IsHeadless="True"
                        RowDefinitions="*,Auto,Auto,*"
                        >
                        <Label
                            Grid.Row="1"
                            Text="{Binding Source={RelativeSource TemplatedParent}, Path=ContentText}"
                            Style="{StaticResource Style.Core.Label.Default}"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"
                            />
                        <Button
                            Grid.Row="2"
                            Text="{Binding Source={RelativeSource TemplatedParent}, Path=ButtonText}"
                            Command="{Binding Source={RelativeSource TemplatedParent}, Path=ButtonCommand}"
                            Style="{StaticResource Style.Core.Button.RoundedLong}"
                            />
                    </Grid>
                </Grid>
            </Border>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
