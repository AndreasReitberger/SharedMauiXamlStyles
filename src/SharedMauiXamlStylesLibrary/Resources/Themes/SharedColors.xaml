    <!-- Light -->
    <Color x:Key="Light_Error">#B00020</Color>
    <Color x:Key="Light_OnError">#ffffff</Color>
    <Color x:Key="Light_OnPrimary">#ffffff</Color>
    <Color x:Key="Light_OnSecondary">#ffffff</Color>
    <Color x:Key="Light_OnBackground">#121212</Color>
    <Color x:Key="Light_OnSurface">#121212</Color>

    <!-- Dark -->
    <Color x:Key="Dark_Error">#CF6679</Color>
    <Color x:Key="Dark_OnError">#121212</Color>
    <Color x:Key="Dark_OnPrimary">#121212</Color>
    <Color x:Key="Dark_OnSecondary">#121212</Color>
    <Color x:Key="Dark_OnBackground">#ffffff</Color>
    <Color x:Key="Dark_OnSurface">#ffffff</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
    <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGray}"/>
    <SolidColorBrush x:Key="MidGrayBrush" Color="{StaticResource MidGray}"/>
