    <Color x:Key="PrimaryLighterColor">#edcacd</Color>
    <Color x:Key="PrimaryColorLight">#B02F35</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
