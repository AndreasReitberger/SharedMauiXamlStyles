<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SharedMauiXamlStylesLibrary.SampleApp.Views.SfExpandersPage"
    
    xmlns:viewModels="clr-namespace:SharedMauiXamlStylesLibrary.SampleApp.ViewModels"
    
    xmlns:icons="clr-namespace:AndreasReitberger.Shared.FontIcons;assembly=SharedMauiXamlStylesLibrary"
    xmlns:iconsSyncfusion="clr-namespace:AndreasReitberger.Shared.Syncfusion.FontIcons;assembly=SharedMauiXamlStylesLibrary.Syncfusion"
    xmlns:expander="clr-namespace:Syncfusion.Maui.Expander;assembly=Syncfusion.Maui.Expander"
    
    Title="SfExpandersPage"
    Style="{StaticResource Style.Core.ContentPage.Default}"
    x:DataType="viewModels:SfExpandersPagePageViewModel"   
    >
    <ScrollView>
        <VerticalStackLayout
            Spacing="0"
            >
            <!-- Some example FAQ's -->
            <Border
                Margin="16,8"
                Style="{StaticResource Style.Core.Border.Expander}"
                >
                <expander:SfExpander>
                    <!-- Header -->
                    <expander:SfExpander.Header>
                        <Grid
                            ColumnDefinitions="50,*"
                            >
                            <Label
                                Margin="16,0,0,0"
                                Style="{StaticResource Style.Core.Label.IconSettings.MaterialDesign}"
                                Text="{x:Static icons:MaterialIcons.FrequentlyAskedQuestions}" 
                                LineHeight="0.25"
                                TextColor="{Binding x:DataType=expander:SfExpander, Source={RelativeSource AncestorType={x:Type expander:SfExpander}}, Path=HeaderBackground, Converter={StaticResource BrushToBlackWhiteConverter}}"
                                />
                            <Label
                                Grid.Column="1"
                                Style="{StaticResource Style.Core.Label.Settings}"
                                Text="Sample 1"
                                LineHeight="0.25"
                                TextColor="{Binding x:DataType=expander:SfExpander, Source={RelativeSource AncestorType={x:Type expander:SfExpander}}, Path=HeaderBackground, Converter={StaticResource BrushToBlackWhiteConverter}}"
                                />
                        </Grid>
                    </expander:SfExpander.Header>
                    <!-- Content -->
                    <expander:SfExpander.Content>
                        <VerticalStackLayout>
                            <Label 
                                Text="This is a basic sample text..." 
                                Margin="16,8"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"
                                Style="{StaticResource Style.Core.Label.Default}"
                                />
                        </VerticalStackLayout>
                    </expander:SfExpander.Content>
                </expander:SfExpander>
            </Border>
            <Border
                Margin="16,8"
                Style="{StaticResource Style.Core.Border.Expander}"
                >
                <expander:SfExpander>
                    <!-- Header -->
                    <expander:SfExpander.Header>
                        <Grid
                            ColumnDefinitions="50,*"
                            >
                            <Label
                                Margin="16,0,0,0"
                                Style="{StaticResource Style.Core.Label.IconSettings.MaterialDesign}"
                                Text="{x:Static icons:MaterialIcons.FrequentlyAskedQuestions}" 
                                LineHeight="0.25"
                                TextColor="{Binding x:DataType=expander:SfExpander, Source={RelativeSource AncestorType={x:Type expander:SfExpander}}, Path=HeaderBackground, Converter={StaticResource BrushToBlackWhiteConverter}}"
                                />
                            <Label
                                Grid.Column="1"
                                Style="{StaticResource Style.Core.Label.Settings}"
                                Text="Sample 2"
                                LineHeight="0.25"
                                TextColor="{Binding x:DataType=expander:SfExpander, Source={RelativeSource AncestorType={x:Type expander:SfExpander}}, Path=HeaderBackground, Converter={StaticResource BrushToBlackWhiteConverter}}"
                                />
                        </Grid>
                    </expander:SfExpander.Header>
                    <!-- Content -->
                    <expander:SfExpander.Content>
                        <VerticalStackLayout>
                            <Label 
                                Text="Another sample text for this FAQ section..." 
                                Margin="16,8"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"
                                Style="{StaticResource Style.Core.Label.Default}"
                                />
                        </VerticalStackLayout>
                    </expander:SfExpander.Content>
                </expander:SfExpander>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>