<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SharedMauiXamlStylesLibrary.SampleApp.Views.FontSizePage"
    
    xmlns:viewModels="clr-namespace:SharedMauiXamlStylesLibrary.SampleApp.ViewModels"
    
    xmlns:icons="clr-namespace:AndreasReitberger.Shared.FontIcons;assembly=SharedMauiXamlStylesLibrary"
    xmlns:iconsSyncfusion="clr-namespace:AndreasReitberger.Shared.Syncfusion.FontIcons;assembly=SharedMauiXamlStylesLibrary.Syncfusion"
    
    Title="FontSizePage"
    Style="{StaticResource Style.Core.ContentPage.Default}"
    x:DataType="viewModels:LabesPageViewModel"   
    >
    <ScrollView>
        <VerticalStackLayout>
            <Label 
                Margin="2,16"
                Text="Header"
                VerticalTextAlignment="Center" 
                HorizontalTextAlignment="Center"
                Style="{StaticResource Style.Core.Label.Default}"
                FontSize="{StaticResource HeaderTextSize}"
                />
            <Label 
                Margin="2,16"
                Text="Title"
                VerticalTextAlignment="Center" 
                HorizontalTextAlignment="Center"
                Style="{StaticResource Style.Core.Label.Default}"
                FontSize="{StaticResource TitleTextSize}"
                />
            <Label 
                Margin="2,16"
                Text="Subtitle"
                VerticalTextAlignment="Center" 
                HorizontalTextAlignment="Center"
                Style="{StaticResource Style.Core.Label.Default}"
                FontSize="{StaticResource SubtitleTextSize}"
                />
            <BoxView
                />
            <Label 
                Margin="2,16"
                Text="Large"
                VerticalTextAlignment="Center" 
                HorizontalTextAlignment="Center"
                Style="{StaticResource Style.Core.Label.Default}"
                FontSize="{StaticResource LargeTextSize}"
                />
            <Label 
                Margin="2,16"
                Text="Medium"
                VerticalTextAlignment="Center" 
                HorizontalTextAlignment="Center"
                Style="{StaticResource Style.Core.Label.Default}"
                FontSize="{StaticResource MediumTextSize}"
                />
            <Label 
                Margin="2,16"
                Text="Default"
                VerticalTextAlignment="Center" 
                HorizontalTextAlignment="Center"
                Style="{StaticResource Style.Core.Label.Default}"
                FontSize="{StaticResource DefaultTextSize}"
                />
            <Label 
                Margin="2,16"
                Text="Small"
                VerticalTextAlignment="Center" 
                HorizontalTextAlignment="Center"
                Style="{StaticResource Style.Core.Label.Default}"
                FontSize="{StaticResource SmallTextSize}"
                />
            <Label 
                Margin="2,16"
                Text="Micro"
                VerticalTextAlignment="Center" 
                HorizontalTextAlignment="Center"
                Style="{StaticResource Style.Core.Label.Default}"
                FontSize="{StaticResource MicroTextSize}"
                />
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>