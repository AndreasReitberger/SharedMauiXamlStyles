<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    >
    
    <Style TargetType="Frame">
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={DynamicResource LightGray}, Dark={DynamicResource DarkGray}}" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>
    
    <Style x:Key="ListViewItemFrameStyle" TargetType="Frame">
        <Setter Property="BorderColor" Value="{DynamicResource TransparentColor}"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource TransparentColor}" />
        <Setter Property="BorderColor" Value="{DynamicResource ItemTemplateBorder}" />
    </Style>
</ResourceDictionary>